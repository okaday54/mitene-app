.wrapper
  .header2
    .image
      = link_to root_path do
        = image_tag "mitene-logo.png", width:'155px', height:'59px'
  .register-main
    .register-container
      .register-head ユーザー登録
      .register-form
        .register-form__content
          = form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: @user
            .form-group
              = f.label :ユーザーネーム
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :username, placeholder: "例) みてね太郎"

            .form-group
              = f.label :メールアドレス
              %span.form-require 必須
              %br/
              .input-field
                = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"

            .form-group
              = f.label :パスワード
              %span.form-require 必須
              %br/
              .input-field
                = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上で入力"
            
            .form-group
              = f.label :"パスワード(確認)"
              %span.form-require 必須
              %br/
              .input-field
                = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上で入力"
            .form-group
              .action
                = f.submit "登録"
  .register-footer
















